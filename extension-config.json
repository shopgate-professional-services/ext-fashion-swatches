{
  "version": "1.0.0",
  "id": "@shopgate-project/fashion-swatches",
  "configuration": {
    "swatchColorStyle": {
      "type": "admin",
      "destination": "frontend",
      "default": {
        "plp": null,
        "pdp": {
          "default": null,
          "selected": null,
          "disabled": null
        }
      },
      "params": {
        "label": "CSS styling for color swatches as glamor object",
        "type": "json",
        "required": true
      }
    },
    "propertyWithColors": {
      "type": "admin",
      "destination": "frontend",
      "default": null,
      "params": {
        "label": "Name of the parent product property which contains color hexcodes of all variants",
        "type": "text",
        "required": true
      }
    },
    "propertyWithColor": {
      "type": "admin",
      "destination": "frontend",
      "default": null,
      "params": {
        "label": "Name of the child product property which contains color hexcode",
        "type": "text",
        "required": true
      }
    },
    "swatchSizeStyle": {
      "type": "admin",
      "destination": "frontend",
      "default": {
        "pdp": {
          "default": null,
          "selected": null,
          "disabled": null
        }
      },
      "params": {
        "label": "CSS styling for size swatches as glamor object",
        "type": "json",
        "required": true
      }
    },
    "colorAttribute": {
      "type": "admin",
      "destination": "frontend",
      "default": null,
      "params": {
        "label": "The csv of product attributes names which are used as color swatch (eg. Color,Shoe color,Farbe)",
        "type": "text",
        "required": true
      }
    },
    "sizeAttribute": {
      "type": "admin",
      "destination": "frontend",
      "default": null,
      "params": {
        "label": "The csv of product attributes names which are used as size swatch (eg. Size,Shoe size,Grosse)",
        "type": "text",
        "required": true
      }
    }
  },
  "components": [
    {
      "id": "PlpSwatches",
      "path": "frontend/components/PlpSwatches/index.jsx",
      "target": "product-item.price.after",
      "type": "portals"
    },
    {
      "id": "PdpColorSwatch",
      "path": "frontend/components/PdpColorSwatch",
      "target": ["sticky-pdp-buttons.favorites.after", "product.header.before"],
      "type": "portals"
    },
    {
      "id": "PdpSizeSwatch",
      "path": "frontend/components/PdpSizeSwatch",
      "target": ["sticky-pdp-buttons.favorites.after", "product.header.before"],
      "type": "portals"
    },
    {
      "id": "PdpVariantCharacteristics",
      "path": "frontend/portals/PdpVariantCharacteristics",
      "target": "product.variant-select",
      "type": "portals"
    },
    {
      "id": "subscribersVariants",
      "path": "frontend/variants/subscriptions.js",
      "type": "subscribers"
    },
    {
      "id": "variants",
      "path": "frontend/variants/reducers.js",
      "type": "reducers"
    }
  ],
  "steps": []
}
