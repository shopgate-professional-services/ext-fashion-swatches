      "path": "frontend/locale/nl-NL.json",
      "id": "locale/nl-NL"
    },
    {
      "type": "translations",
      "path": "frontend/locale/pl-PL.json",
      "id": "locale/pl-PL"
    },
    {
      "type": "translations",
      "path": "frontend/locale/pt-PT.json",
      "id": "locale/pt-PT"
    },
    {
      "type": "translations",
