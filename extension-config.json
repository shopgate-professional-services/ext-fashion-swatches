{
  "version": "1.0.0",
  "id": "@shopgate-project/fashion-swatches",
  "configuration": {
    "swatchStyle": {
      "type": "admin",
      "destination": "frontend",
      "default": {
        "plp": {
          "border": "1px solid blue"
        },
        "pdp": {
          "borderRadius": "none",
          "border": "10px solid red"
        }
      },
      "params": {
        "label": "CSS styling for swatches as glamor object",
        "type": "json",
        "required": true
      }
    },
    "propertyWithColors": {
      "type": "admin",
      "destination": "frontend",
      "default": "hexCodes",
      "params": {
        "label": "Name of the product property which contains to hexcodes/images of all variants",
        "type": "text",
        "required": true
      }
    },
    "swatchSizeStyle": {
      "type": "admin",
      "destination": "frontend",
      "default": {
        "plp": null,
        "pdp": {
          "default": null,
          "selected": null,
          "disabled": null
        }
      },
      "params": {
        "label": "CSS styling for size swatches as glamor object",
        "type": "json",
        "required": true
      }
    },
    "sizeProperty": {
      "type": "admin",
      "destination": "frontend",
      "default": null,
      "params": {
        "label": "The csv of product properties names which is used as size swatch (eg. Size,Shoe size,Grosse)",
        "type": "text",
        "required": true
      }
    }
  },
  "components": [
    {
      "id": "PlpSwatches",
      "path": "frontend/components/PlpSwatches/index.jsx",
      "target": "product-item.price.after",
      "type": "portals"
    },
    {
      "id": "PdpSizeSwatch",
      "path": "frontend/components/PdpSizeSwatch",
      "target": ["sticky-pdp-buttons.favorites.after", "product.header.before"],
      "type": "portals"
    },
    {
      "id": "PdpVariantCharacteristics",
      "path": "frontend/portals/PdpVariantCharacteristics",
      "target": "product.variant-select",
      "type": "portals"
    },
    {
      "id": "subscribersVariants",
      "path": "frontend/variants/subscriptions.js",
      "type": "subscribers"
    },
    {
      "id": "variants",
      "path": "frontend/variants/reducers.js",
      "type": "reducers"
    }
  ],
  "steps": []
}
